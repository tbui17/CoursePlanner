<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:CoursePlanner.Controls"
    xmlns:pageViewModels="clr-namespace:ViewModels.PageViewModels;assembly=ViewModels"

    x:Class="CoursePlanner.InstructorFormPage"
    x:DataType="pageViewModels:InstructorFormViewModel" Title="{Binding Title}" >

    <ContentPage.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource FieldLabel}" ></Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="10,10" >
        <controls:AutoGrid>
            <Label Text="Name:" />
            <Entry Text="{Binding Name}" />
            <Label Text="Email:" />
            <Entry Text="{Binding Email}" />
            <Label Text="Phone:" />
            <Entry Text="{Binding Phone}" />
        </controls:AutoGrid>
        <Button Text="Save" Command="{Binding SaveCommand}" />
    </VerticalStackLayout>
</ContentPage>