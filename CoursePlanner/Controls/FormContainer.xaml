<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:CoursePlanner.Controls"
    x:Class="CoursePlanner.Controls.FormContainer"
    x:DataType="l:FormContainer" >

    <ContentView.Resources>
        <Style TargetType="VerticalStackLayout" BasedOn="{StaticResource DefaultVerticalStack}" >
            <Setter Property="Spacing" Value="25" />
        </Style>
        <Style TargetType="HorizontalStackLayout" BasedOn="{StaticResource DefaultHorizontalStack}" >
            <Setter Property="VerticalOptions" Value="Center" />
        </Style>
        <Style TargetType="Label" BasedOn="{StaticResource FieldLabel}" >
            <Setter Property="VerticalOptions" Value="Center" />
            
        </Style>
      
    </ContentView.Resources>
    <ContentPresenter />
</ContentView>