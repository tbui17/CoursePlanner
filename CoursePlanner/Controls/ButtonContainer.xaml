<?xml version="1.0" encoding="utf-8"?>

<FlexLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:CoursePlanner.Controls"
    Style="{StaticResource ButtonContainer}"
    x:Class="CoursePlanner.Controls.ButtonContainer"
    x:DataType="l:ButtonContainer" >
    <FlexLayout.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}" >
            <Setter Property="MinimumWidthRequest" Value="75" />
        </Style>
    </FlexLayout.Resources>
    

</FlexLayout>