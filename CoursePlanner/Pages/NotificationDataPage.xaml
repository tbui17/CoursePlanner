<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoursePlanner.Pages.NotificationDataPage"

             xmlns:controls="clr-namespace:CoursePlanner.Controls"
             xmlns:interfaces="clr-namespace:Lib.Interfaces;assembly=Lib"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:cz="clr-namespace:FunctionZero.Maui.Controls;assembly=FunctionZero.Maui.Controls"
             xmlns:domain="clr-namespace:ViewModels.Domain;assembly=ViewModels"
             x:Name="Page"

             x:DataType="domain:NotificationDataViewModel">
    <ContentPage.Resources>

    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout x:Name="MainLayout" Margin="10,10,10,30">
                <VerticalStackLayout Margin="10" Spacing="10">
                    <controls:AutoGrid>
                        <Label Text="Month" />
                        <DatePicker Date="{Binding MonthDate}" />
                        <Label Text="Filter" />
                        <Entry Text="{Binding FilterText}" />
                        <Label Text="Total Items" />
                        <Label Text="{Binding TotalItems}" />
                        <Label Text="Item Count" />
                        <Label Text="{Binding ItemCount}" />
                    </controls:AutoGrid>
                </VerticalStackLayout>

                <cz:ListViewZero
                    ItemsSource="{Binding NotificationItems}"
                    SelectionMode="None"
                    ItemTemplate="{StaticResource NotificationCard}" />

            </VerticalStackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>