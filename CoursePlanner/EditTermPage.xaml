<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:coursePlanner="clr-namespace:CoursePlanner"
    xmlns:viewModels="clr-namespace:CoursePlanner.ViewModels"
    xmlns:controls="clr-namespace:CoursePlanner.Controls"

    x:Class="CoursePlanner.EditTermPage"
    x:DataType="viewModels:EditTermViewModel" Title="Edit Term" >

    <ContentPage.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource FieldLabel}" ></Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="10,10" >
        <controls:AutoGrid>
            <Label Text="Name:" />
            <Entry Text="{Binding Name}" />
            <Label Text="Start:" />
            <DatePicker Date="{Binding Start}" />
            <Label Text="End:" />
            <DatePicker Date="{Binding End}" />
        </controls:AutoGrid>
        <Button Text="Save" Command="{Binding SaveCommand}" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>